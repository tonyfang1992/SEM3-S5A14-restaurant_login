<div class="row mt-5">
  <div class="col-md-5 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-4">Log In</h1>
      {{> messages }}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            maxlength="14" />
        </div>
        <button type="submit" class="btn btn-secondary btn-block">
          <i class="fa fa-sign-in mr-2" aria-hidden="true"></i>
          Log In
        </button>
        <p class="text-center my-2">OR</p>
        <a href="/auth/facebook" class="btn btn-primary btn-block">
          <span><i class="fa fa-facebook-square mr-2" aria-hidden="true"></i></span>
          Facebook Login
        </a>
        <a href="/auth/github" class="btn btn-dark btn-block">
          <span><i class="fa fa-github mr-2" aria-hidden="true"></i></span>
          GitHub Login
        </a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Sign up now!</a>
      </p>
    </div>
  </div>
</div>