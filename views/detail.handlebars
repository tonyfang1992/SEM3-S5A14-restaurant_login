<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">

  <div class="text-right mb-5 select">
    <a href="/" class="btn btn-secondary  mr-3">
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
      Back
    </a>
    <a href="/restaurants/{{{restaurant.id}}}/edit" class="btn btn-info mr-3">
      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
      Edit
    </a>
    <button type="button" data-toggle="modal" data-target="#delete-{{{restaurant.id}}}" class="btn btn-outline-danger">
      <i class="fa fa-trash-o" aria-hidden="true"></i>
      Delete
    </button>
  </div>

  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>

  <!-- Modal -->
  <div class="modal" tabindex="-1" id="delete-{{{restaurant.id}}}" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">提醒</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h4>確定要刪除<span class="text-danger"> {{restaurant.name}}</span> ?</h4>
        </div>
        <div class="modal-footer">
          <form action="/restaurants/{{{restaurant.id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger btn-sm  mr-3">確認刪除</button>
          </form>
          <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">取消</button>
        </div>
      </div>
    </div>
  </div>
</div>